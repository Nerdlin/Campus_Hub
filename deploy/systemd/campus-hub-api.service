[Unit]
Description=Campus Hub Local API (server.js)
After=network.target

[Service]
Type=simple
Environment=NODE_ENV=production
Environment=PORT=4000
WorkingDirectory=/var/www/Campus_Hub
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
User=campus
Group=campus

[Install]
WantedBy=multi-user.target


